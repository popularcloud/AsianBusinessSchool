<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="line_ccStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/f0_gray_line</item>
    </style>

    <!-- 首页底部导航菜单RadioButton的style -->
    <style name="main_menu_radiobutton_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/white</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/tab_padding_bottom</item>
        <item name="android:paddingTop">@dimen/tab_padding_top</item>
        <item name="android:textColor">@drawable/tab_textcolor_selector</item>
        <item name="android:textSize">@dimen/tab_text_size</item>
    </style>
</resources>
