<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_marginTop="15dp"
    android:layout_marginRight="15dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:src="@color/gray_dd"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:textSize="14sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="6dp"
        android:textColor="@color/black_33"
        android:text="卓越团队打造业绩提升" />
    <TextView
        android:id="@+id/tv_spece"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:textSize="12sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/black_66"
        android:layout_marginTop="6dp"
        android:text="教你如何打造团队提升价值" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_btn01"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:gravity="center"
            android:text="取消订单"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/btn_gray_fill"/>
        <TextView
            android:id="@+id/tv_btn02"
            android:layout_height="wrap_content"
            android:layout_width="68dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:text="付款"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/btn_red_fill"/>
    </LinearLayout>
</LinearLayout>
