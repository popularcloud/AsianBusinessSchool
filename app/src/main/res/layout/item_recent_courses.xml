<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_marginTop="15dp"
    android:layout_marginRight="15dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:src="@mipmap/image_default_picture"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:textSize="13sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="6dp"
        android:textColor="@color/black"
        android:text="XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX" />
    <TextView
        android:id="@+id/tv_spece"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:textSize="11sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/gray_99"
        android:layout_marginTop="6dp"
        android:text="XXXXXXXXXXXXXXXXXXXXXX" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_btn01"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:gravity="center"
            android:text="取消订单"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/btn_gray_fill"/>
        <TextView
            android:id="@+id/tv_btn02"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:text="付款"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/btn_red_fill"/>
    </LinearLayout>
</LinearLayout>
