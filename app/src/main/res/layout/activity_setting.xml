<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:background="@color/f0_gray_line"
    android:orientation="vertical">
    <include layout="@layout/include_title_no_bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingRight="15dp"
        android:paddingLeft="15dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/black_33"
            android:text="手机号绑定"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/btn_blue_d5"
            android:gravity="right"
            android:text="已经绑定"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingRight="15dp"
        android:layout_marginTop="1px"
        android:paddingLeft="15dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/black_33"
            android:text="修改密码"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black_66"
            android:drawableRight="@mipmap/you_new"
            android:gravity="right"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingRight="15dp"
        android:layout_marginTop="1px"
        android:paddingLeft="15dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/black_33"
            android:text="微信登录"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/btn_blue_d5"
            android:gravity="right"
            android:text="已经绑定"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingRight="15dp"
        android:layout_marginTop="1px"
        android:paddingLeft="15dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/black_33"
            android:text="软件升级"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black_66"
            android:gravity="right"
            android:text="当前版本1.0.0"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingRight="15dp"
        android:layout_marginTop="1px"
        android:paddingLeft="15dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/black_33"
            android:text="关于我们"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black_66"
            android:drawableRight="@mipmap/you_new"
            android:gravity="right" />
    </LinearLayout>
    
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:textSize="17sp"
        android:textColor="@color/red_d4"
        android:text="退出登录"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:gravity="center"
        android:text="使用协议"
        android:textSize="14sp"
        android:textColor="@color/btn_blue_d5"
        />
</LinearLayout>